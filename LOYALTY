    // Get the client ID from the URL query string
    function getQueryParam(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name) || 'Unknown';
    }
    // Example: Show the client ID
    document.getElementById('clientId').textContent = "Client ID: " + getQueryParam('id');
